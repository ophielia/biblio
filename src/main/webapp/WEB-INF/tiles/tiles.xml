<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- Templates -->
	<definition name="baseLayout" template="/WEB-INF/jsp/layout/base-layout.jspx">
		<put-attribute name="header" value="/WEB-INF/jsp/layout/biblio-header.jspx" />
		<put-attribute name="hmenu" value="/WEB-INF/jsp/layout/hmenu.jspx" />
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jspx" />
		<put-attribute name="body" value="" />
	</definition>

	<definition name="*" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/jsp/view/{1}.jspx" />
	</definition>


	<definition name="default" template="/WEB-INF/jsp/layout/base-layout.jspx">
		<put-attribute name="header" value="/WEB-INF/jsp/layout/biblio-header.jspx" />
		<put-attribute name="hmenu" value="/WEB-INF/jsp/layout/hmenu.jspx" />
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jspx" />
		<put-attribute name="body" value="" />
	</definition>

</tiles-definitions>